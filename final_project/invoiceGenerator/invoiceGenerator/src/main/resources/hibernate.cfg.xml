<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <!-- JDBC Database connection settings -->
        <property name="connection.driver_class">org.mariadb.jdbc.Driver</property>
        <property name="connection.url">jdbc:mariadb://localhost:3306/invoice_generator_db</property>
        <property name="connection.username">edunova</property>
        <property name="connection.password">edunova</property>
        <!-- JDBC connection pool settings ... using built-in test pool -->
        <property name="connection.pool_size">5</property>
        <!-- Select our SQL dialect -->
        <property name="dialect">org.hibernate.dialect.MariaDBDialect</property>
        <!-- Echo the SQL to stdout -->
        <property name="show_sql">true</property>
        <!-- Set the current session context -->
        <property name="current_session_context_class">thread</property>
        <!-- Drop and re-create the database schema on startup -->
        <property name="hbm2ddl.auto">create-drop</property>
        <!-- dbcp connection pool configuration -->
        <property name="hibernate.dbcp.initialSize">5</property>
        <property name="hibernate.dbcp.maxTotal">20</property>
        <property name="hibernate.dbcp.maxIdle">10</property>
        <property name="hibernate.dbcp.minIdle">5</property>
        <property name="hibernate.dbcp.maxWaitMillis">-1</property>
        <mapping class="invoiceGenerator.model.Identity"/>
        <mapping class="invoiceGenerator.model.Customer"/>
        <mapping class="invoiceGenerator.model.Invoice"/>
        <mapping class="invoiceGenerator.model.Address"/>
        <mapping class="invoiceGenerator.model.Article"/>
        <mapping class="invoiceGenerator.model.ArticleInvoice"/>
        <mapping class="invoiceGenerator.model.Status"/>
        <mapping class="invoiceGenerator.model.TransactionType"/>
    </session-factory>
</hibernate-configuration>
